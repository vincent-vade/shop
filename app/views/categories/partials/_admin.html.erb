<h3>Liste des catégories <%= link_to 'Ajouter une catégorie', new_category_path, :class=> "btn btn-primary pull-right" %></h3>
<hr>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td colspan="3" rowspan="" headers="">
          <%= link_to 'Voir', category, :class=> "btn btn-primary" %>
          <%= link_to 'Editer', edit_category_path(category), :class=>"btn btn-info" %>
          <%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

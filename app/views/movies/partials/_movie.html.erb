<div class="col-sm-4 col-lg-4 col-md-4">
  <div class="thumbnail">
    <%= image_tag(movie.image.thumb, :class=> "img-responsive") %>
    <div class="caption">
      <h4><%= link_to movie.title.truncate(13), movie %> <small class="pull-right">â‚¬ <%= movie.price%></small></h4>
      <p><%= movie.description.truncate(100) %></p>
    </div>
  </div>
  <% if current_user.try(:admin?) %>
  <td><%= link_to 'Edit', edit_movie_path(movie), :class=> "btn btn-info" %></td>
  <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' },  :class=> "btn btn-danger" %></td>
  <% end %>
</div>
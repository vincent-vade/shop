<div class="container">
	<% if notice %>
	<div class="alert alert-success alert-dismissible">
	  <button type="button" class="close" data-dismiss="alert"><%= fa_icon "close"
%></button>
		<p> <%= notice %></p>
	</div>
<% end %>
<% if alert %>
	<div class="alert alert-danger alert-dismissible">
	  <button type="button" class="close" data-dismiss="alert"><%= fa_icon "close"
%></button>
		<p><%= alert %></p>
	</div>
<% end %>
</div>

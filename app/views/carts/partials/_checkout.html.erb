<%# list movies%>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Article(s)</th>
      <th>Quantité</th>
      <th>Prix unité</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
  <% @order_items.each do |order_item| %>
  <tr>
	  <td>
      <%= order_item.movie.title %>
	  </td>
	  <td>
	  	<%= order_item.quantity%>
	  </td>
	  <td>
	    <span><%= number_to_currency order_item.unit_price %></span>
	  </td>
	  <td>
	  	<span><%= number_to_currency order_item.total_price %></span>
	  </td>
	</tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4" class="text-right">        
        <h4>Prix total:</h4>
        <span><%= number_to_currency current_order.subtotal%></span>
      </td>
    </tr>
  </tfoot>
</table> 
<button type="button" class="btn btn-primary pull-right">valider la commande</button>